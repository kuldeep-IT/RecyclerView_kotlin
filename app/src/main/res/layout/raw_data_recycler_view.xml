<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/rec_imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_launcher_background"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rec_imageView"
        android:id="@+id/rec_txtId"
        android:hint="ID:"
        android:layout_marginLeft="15dp"
        android:textSize="17dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rec_imageView"
        android:id="@+id/rec_txtName"
        android:hint="NAME:"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/rec_txtId"
        android:textSize="17dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rec_imageView"
        android:id="@+id/rec_txtPrice"
        android:hint="PRICE:"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/rec_txtName"
        android:textSize="17dp"
        android:layout_marginTop="15dp"/>
</RelativeLayout>